# EditorConfig is awesome: https://editorconfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{yml,yaml}]
max_line_length = off

[*.{json,js,ts,jsx,tsx}]
quote_type = single
indent_brace_style = K&R

{
  "name": "library-metrics",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --bun vite dev --port 3000",
    "build": "bun --bun vite build && bun --bun run scripts/copy-db.ts",
    "preview": "bun --bun vite preview",
    "test": "bun --bun vitest run",
    "db:generate": "npx drizzle-kit generate",
    "db:migrate": "bun --bun run scripts/db-migrate.ts",
    "db:view:install:linux": "sudo apt-get install -y pipx && pipx ensurepath && pipx install datasette",
    "db:view:install:mac": "brew install pipx && pipx ensurepath && pipx install datasette",
    "db:view": "datasette ./data/library-metrics.sqlite --host 127.0.0.1 --port 8001",
    "sync:gitlab": "bun --bun run src/jobs/sync-gitlab.ts --verbose",
    "sync:gitlab:force": "bun --bun run src/jobs/sync-gitlab.ts --force --verbose",
    "cloc": "bunx --bun cloc --exclude-dir=node_modules,dist,.codex,.nx,.vscode --exclude-ext=yaml,json,svg,md --vcs git ."
  },
  "dependencies": {
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "@yarnpkg/lockfile": "^1.1.0",
    "lucide-react": "^0.561.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "nitro": "npm:nitro-nightly@latest",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite-tsconfig-paths": "^6.0.2",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "^1.3.8",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@types/yarnpkg__lockfile": "^1.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^27.0.0",
    "sass": "^1.97.3",
    "sass-embedded": "^1.97.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0"
  }
}
